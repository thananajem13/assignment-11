<%- include('./shared/header')%>

    <title>Document</title>
    </head>

    <body>
        <section class="main p-5">
            <div class="container my-5 p-5">
                <div class="w-100 text-center">
                    <h1>Welcome Back</h1>
                </div>
                <% if (messageErr?.length) { %>
                    <div class="alert alert-danger text-center my-1">
                        <%= messageErr %>
                    </div>
                    <% } %>

                        <div class="my-2">
                            <form class="m-auto w-75 p-5" action="/auth/signin" method="POST">


                                <div class="form-group my-1">

                                    <input value="<%=oldInputs?.email%>" class="form-control" name="email" placeholder="Email"
                                        type="email" />
                                </div>
                                <% if (validationErr?.includes('email')) { %>
                                    <div class="alert alert-danger my-1 text-center">
                                       In-valid Email
                                    </div>
         
                                    <% } %>
   
                                <div class="form-group my-1">
                                    <input value="<%=oldInputs?.password%>" class="form-control" name="password" placeholder="Password"
                                        type="password" />
                                </div>

                                <% if (validationErr?.includes('password')) { %>
                                    <div class="alert alert-danger my-1 text-center">
                                       In-valid Password
                                    </div>
         
                                    <% } %>
   
                                <div class="form-group my-1">
                                    <button class="btn btn-info w-100"> Login</button>
                                    <a class="my-1 text-center" href="/auth/signup">Don't have account? Register Now</a>

                                </div>

                            </form>
                        </div>
            </div>
        </section>
        <%- include('./shared/footer')%>